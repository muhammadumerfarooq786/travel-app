<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/homepage.css" />
    <link rel="stylesheet" href="./css/edit.css" />
    <title>Edit Travel Plan</title>
  </head>
  <body>
    <% if (!travelSession) { %>
    <script>
      window.location.href = "/";
    </script>
    <% } else { %>
    <div id="userIdContainer" style="display: none">
      <%= travelSession.userId %>
    </div>

    <div class="menu-bar">
      <div class="logo">
        <h3>Travel Planner</h3>
      </div>
      <div class="menu-options">
        <a href="../new">Add New Plan</a>
        <a href="../action">Actions</a>
        <a href="../logout">Logout</a>
      </div>
      <div class="hamburger-icon">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div class="container">
      <form id="editForm">
        <input type="hidden" id="planId" />

        <div class="form-group">
          <label for="name">Travel Plan Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Travel Plan Name"
            required
          />
        </div>

        <div class="form-group">
          <label for="travel_date">Travel Date:</label>
          <input type="date" id="travel_date" name="travel_date" required />
        </div>

        <div id="activities">
          <!-- Ingredients will be dynamically added here -->
        </div>

        <div class="form-group">
          <label for="notes">Notes:</label>
          <textarea
            id="notes"
            name="notes"
            placeholder="Enter notes"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="priority">Priority:</label>
          <select id="priority" name="priority">
            <option value="high">High</option>
            <option value="low">Low</option>
          </select>
        </div>

        <button type="button" class="addsubmit" onclick="submitEdit()">
          Submit
        </button>
      </form>
    </div>

    <script src="./js/homepage.js"></script>
    <script src="./js/edit.js"></script>
    <% } %>
  </body>
</html>

<!-- action.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/homepage.css" />
    <link rel="stylesheet" href="./css/actions.css" />
    <title>Travel Planner - Action Page</title>
  </head>
  <body>
    <% if (!travelSession) { %>
    <script>
      window.location.href = "/";
    </script>
    <% } else { %>
    <div id="userIdContainer" style="display: none">
      <%= travelSession.userId %>
    </div>

    <div class="menu-bar">
      <div class="logo">
        <h3>Travel Planner</h3>
      </div>
      <div class="menu-options">
        <a href="/new">Create New Plan</a>
        <a href="/action">Actions</a>
        <a href="/logout">Logout</a>
      </div>
      <div class="hamburger-icon">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div class="container">
      <h2>Your Travel Plans</h2>
      <table id="travelPlansTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Travel Date</th>
            <th>Activities List</th>
            <th>Notes</th>
            <th>Priority</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="travelPlansBody">
          <!-- Travel plans will be dynamically added here -->
        </tbody>
      </table>
    </div>

    <script src="./js/homepage.js"></script>
    <script src="./js/actions.js"></script>
    <% } %>
  </body>
</html>
